extends ../layout/index

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contents
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-gray-900 Real
            span.font-normal Estate 
        h2.text-center.text-2xl.font-extrabold= pageName

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-5(method="POST" action="/properties/create")
                input(type="hidden" name="_csrf" value=csrfToken)
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Property Details
                    p.text-gray-600 Add your property details to create a listing that stands out to potential buyers.

                div
                    label.block.text-gray-700.font-bold.mb-2(for="title") Title
                    input#title(type="text" name="title" placeholder="Property Title, ex. Beach house" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600")
                
                div
                    label.block.text-gray-700.font-bold.mb-2(for="description") Description 
                    textarea#description(name="description" placeholder="description " class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600")


                div(class="md:flex gap-4 mt-4 mb-4 space-y-5 md:space-y-0")

                    div(class="md:w-1/2")
                        label.block.text-gray-700.font-bold.mb-2(for="tags") Tags 
                        select#tags(name="tags" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600")
                            option(value="") - Select - 
                            each tags in tag 
                                option(value=tags.id)= tags.name

                    div(class="md:w-1/2")
                        label.block.text-gray-700.font-bold.mb-2(for="price") Price
                        select#price(name="price" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600")
                            option(value="") - Select - 
                            each prices in price  
                                option(value=prices.id)= prices.name

                div(class="md:flex gap-4 mt-4 mb-4 space-y-5 md:space-y-0")

                    div(class="md:w-1/3")
                        label.block.text-gray-700.font-bold.mb-2(for="bedrooms") Bedrooms 
                        select#bedrooms(name="bedrooms" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600")
                            option(value="") - Select - 
                            - var n = 1;
                            - while (n < 6)
                                option(value=n) #{n++}

                    div(class="md:w-1/3")
                        label.block.text-gray-700.font-bold.mb-2(for="garage") Garage
                        select#garage(name="garage" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600")
                            option(value="") - Select - 
                            - var n = 1;
                            - while (n < 4)
                                option(value=n) #{n++}

                    div(class="md:w-1/3")
                        label.block.text-gray-700.font-bold.mb-2(for="wc") WC
                        select#wc(name="wc" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600")
                            option(value="") - Select - 
                            - var n = 1;
                            - while (n < 6)
                                option(value=n) #{n++}

                div.border-gray-200.border-t.py-5.space-y-5                           
                    h3.text-lg.leading-6.font-medium.text-gray-900 Location
                    p.text-gray-600 Add the location of your property to help potential buyers find it on the map and understand its surroundings.
                    #mapa.h-96

                    div 
                        p.calle

                    input(type="hidden" name="calle" id="calle")
                    input(type="hidden" name="lat"  id="lat")
                    input(type="hidden" name="lng" id="lng")
                
                input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Add Image")
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")